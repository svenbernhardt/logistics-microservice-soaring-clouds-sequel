apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rest-logisticsms
  labels:
    run: rest-logisticsms
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        run: rest-logisticsms
    spec:
      containers:
      - image: $DOCKER_USERNAME/logistics-ms:$WERCKER_GIT_COMMIT
        imagePullPolicy: Always
        name: rest-logisticsms
        ports:
        - containerPort: 8096
          protocol: TCP
        env:
          - name: ELASTIC_CONNECTOR
            value: $ELASTIC_CONNECTOR_VARIABLE
          - name: EVENT_HUB_HOST
            value: $EVENT_HUB
          - name: KAFKA_HOST
            value: $KAFKA_HOST
          - name: SCHEMA_REGISTRY
            value: $SCHEMA_REGISTRY
          - name: SOARING_PRODUCTS_TOPIC_NAME 
            value: $SOARING_PRODUCTS_TOPIC_NAME 
          - name: SOARING_SHIPPINGNEWS_TOPIC_NAME
            value: $SOARING_SHIPPINGNEWS_TOPIC_NAME
      imagePullSecrets:
      - name: wrelease
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: rest-logisticsms-svc
spec:
  selector:
    run: rest-logisticsms
  ports:
    - nodePort: 30060
      port: 8088
      targetPort: 8096
  type: NodePort
